import { GamepadModel, GamepadList } from "gamepad-list.slint";

export component MainWindow inherits Window {
    in property <[GamepadModel]> model <=> gamepad-list.model;
    in property <string> clock_text <=> clock.text;

    preferred-width: 800px;
    preferred-height: 600px;

    VerticalLayout {
        alignment: stretch;

        gamepad-list := GamepadList {
            height: 32px;
            alignment: start;
        }

        clock := Text {
            text: "00:00";
            //color: white;
            font-family: "Ubuntu";
            font-size: root.height / 4;
            font-weight: 800;
            horizontal-alignment: center;
            vertical-alignment: center;
        }

        app-list := Rectangle {
            height: 64px;
        }

        status-bar := Rectangle {
            height: gamepad-list.height;
            background: black;
        }
    }
    
}